<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnBackground"
    tools:context=".ChangePassword">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Change Password"
        android:textColor="@color/colorOnButton"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="390dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/shape_left_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeback"
        app:layout_constraintVertical_bias="0.156">


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/Registerpanel"
        android:layout_width="350dp"
        android:layout_height="280dp"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="100dp"
        android:paddingTop="40dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/shape_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/welcomeback" >

        <EditText
            android:id="@+id/current_password"
            android:hint="Current_Password"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:imeOptions="actionUnspecified"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>


        <EditText
            android:id="@+id/newpassword"
            android:hint="New_Password"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:imeOptions="actionUnspecified"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm_Password"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/change_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Change"
        android:background="@drawable/login_button_back"
        app:layout_constraintBottom_toBottomOf="@+id/Registerpanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>